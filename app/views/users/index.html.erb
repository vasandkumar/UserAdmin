<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">
         <a class="navbar-brand" href="#">Listing Users</a>
      </a>
    </div>
  </div>
</nav>
<div class="container">
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
<% will_paginate @users %>
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Sapid</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>E-Mail</th>
      <th>Mobile</th>
      <th>Username</th>
      <th colspan="3">Actions</th>
      <th colspan="2">Links</th>
      
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.sapid %></td>
        <td><%= user.fname %></td>
        <td><%= user.lname %></td>
        <td><%= user.email %></td>
        <td><%= user.mobile %></td>
        <td><%= user.username %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Profile', user_profiles_path(user_id: user.id) %></td>
        <td><%= link_to 'Pics', user_pics_path(user_id: user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="center-block" style="margin-left:45%"><%= will_paginate @users %></div>


<br>

<a href="<%= new_user_path %>" class="btn btn-default" style="margin-left:46%;" role="button">Add New User</a>

</div>
</div>
