<div class="container">
  <p id="notice"><%= notice %></p>

<h1>Listing Profiles</h1>
<div class="row">
  <div class="col-md-12">
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>User</th>
      <th>Address</th>
      <th>Bio</th>
      <th>Gender</th>
      <th>Placeofbirth</th>
      <th>Countryofbirth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @profiles.first.nil?
          @newproftitle = 'Create Profile'
       else
          @newproftitle = 'Delete & Create Profile'
       end%>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.address %></td>
        <td><%= profile.bio %></td>
        <td><%= profile.gender %></td>
        <td><%= profile.placeofbirth %></td>
        <td><%= profile.countryofbirth %></td>
        <td><%= link_to 'Show', user_profile_path(id: profile.id ) %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(id: profile.id) %></td>
        <td><%= link_to 'Destroy', user_profile_path(id: profile.id ), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to @newproftitle, new_user_profile_path, class: 'btn btn-default', style: 'margin-left:40%;' , role: 'button'  %> |
<%= link_to 'Back', users_path, class: 'btn btn-default', role: 'button'  %> 

</div>
</div>
