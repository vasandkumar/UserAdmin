<div class="container">
  <p id="notice"><%= notice %></p>

<h1>Listing Pics</h1>
<div class="row">

  <div class="row">
    <% @user.pics.each do |pic| %>
  <div class="col-sm-5 col-md-3">
    
    <div class="thumbnail">
      <%= image_tag pic.picture.url(:thumbnail) %>
      <div class="caption">
        <h3><%= pic.imageuri %></h3>
        
        <p><a href="<%= user_pic_path(id: pic.id) %>" class="btn btn-default" role="button">Show</a> <a href="<%= edit_user_pic_path(id: pic.id) %>" class="btn btn-default" role="button">Edit</a> <%= link_to 'Destroy', user_pic_path(id: pic.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default', role: 'button' %></p>
      </div>
    </div>
    
  </div>
  <% end %>
</div>
  

<a href="<%= new_user_pic_path %>" class="btn btn-default" style="margin-left:40%;" role="button"> Add new Pics</a> | 
<a href="<%= users_path %>" class="btn btn-default" role="button"> Back</a>
</div>
</div>
