<div class="container">
  <p id="notice"><%= notice %></p>

<h1>Listing Pics</h1>
<div class="row">
  <div class="col-md-12">
<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Image Description</th>
      <th>User</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.pics.each do |pic| %>
      <tr>
        <td><%= pic.imageuri %></td>
        <td><%= pic.user_id %></td>
        <td><%= image_tag pic.picture.url(:thumb) %></td>
        <td><%= link_to 'Show', user_pic_path(id: pic.id) %></td>
        <td><%= link_to 'Edit', edit_user_pic_path(id: pic.id) %></td>
        <td><%= link_to 'Destroy', user_pic_path(id: pic.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="<%= new_user_pic_path %>" class="btn btn-default" style="margin-left:40%;" role="button"> Add new Pics</a> | 
<a href="<%= users_path %>" class="btn btn-default" role="button"> Back</a>
</div>
</div>
