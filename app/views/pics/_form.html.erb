<%= form_for([@user, @pic],:html => { :multipart => true} ) do |f| %>
  <% if @pic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pic.errors.count, "error") %> prohibited this pic from being saved:</h2>

      <ul>
      <% @pic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :imageuri, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-2">
    <%= f.text_field :imageuri, :class => 'form-control' %>
  </div>
</div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-2">
    <%= f.text_field :user_id, :readonly => true, :value =>  @pic.user_id %>
  </div>
  </div>
  <div class="form-group">
    <%= f.label :picture, :class => 'col-sm-2 control-label' %>
    <div class="col-sm-2">
    <%= f.file_field 'picture' %>
  </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit %>
  </div>
</div>
<% end %>
